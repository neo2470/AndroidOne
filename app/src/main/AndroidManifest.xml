<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alex.androidone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ActivityLifecycle"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity android:name=".ActivityLifecycle1" />

        <activity
            android:name=".ActivityLifecycle2"
            android:theme="@android:style/Theme.Dialog" />

        <activity android:name=".AnimActivity" />
        <activity android:name=".LayoutAnimActivity" />

    </application>

</manifest>
