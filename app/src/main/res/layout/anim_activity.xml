<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drawableAnim"
            android:background="@color/anim_title_bg"
            android:text="Drawable Animation"/>

        <LinearLayout
            android:id="@+id/frameAnimLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/drawableAnim"
            android:gravity="center_vertical"
            android:background="@color/anim_layout_bg">

            <ImageView
                android:id="@+id/foreAnim"
                android:layout_width="120dp"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/loadingAnim"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@anim/loading_anim"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/googleLoadingAnim"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewAnim"
            android:background="@color/anim_title_bg"
            android:layout_below="@id/frameAnimLayout"
            android:text="View Animation"/>

        <HorizontalScrollView
            android:id="@+id/viewAnimLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/anim_layout_bg"
            android:layout_below="@id/viewAnim">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/scaleView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avator"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:onClick="onClick"
                    android:id="@+id/aAnim"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:onClick="onClick"
                    android:id="@+id/sAnim"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:onClick="onClick"
                    android:id="@+id/rAnim"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:onClick="onClick"
                    android:id="@+id/tAnim"/>

            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/objAnim"
            android:background="@color/anim_title_bg"
            android:layout_below="@id/viewAnimLayout"
            android:text="Object Animation"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/anim_layout_bg"
            android:layout_below="@id/objAnim">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avator"
                android:id="@+id/objAnimView1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide"
                android:textAllCaps="false"
                android:onClick="onClick"
                android:layout_below="@id/objAnimView1"
                android:id="@+id/objAnimBtn1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#FFFF8080"
                android:id="@+id/objAnimView2"
                android:layout_toRightOf="@id/objAnimView1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Start"
                android:onClick="onClick"
                android:layout_alignLeft="@id/objAnimView2"
                android:layout_below="@id/objAnimView2"
                android:id="@+id/objAnimBtn2"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/play_image"
                android:layout_toRightOf="@id/objAnimView2"
                android:id="@+id/objAnimView3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Start"
                android:onClick="onClick"
                android:layout_below="@id/objAnimView3"
                android:layout_alignLeft="@id/objAnimView3"
                android:id="@+id/objAnimBtn3"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>