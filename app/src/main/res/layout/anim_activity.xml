<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drawableAnim"
            android:background="@color/anim_title_bg"
            android:text="Drawable Animation"/>

        <LinearLayout
            android:id="@+id/frameAnimLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/drawableAnim"
            android:gravity="center_vertical"
            android:background="@color/anim_layout_bg">

            <ImageView
                android:id="@+id/foreAnim"
                android:layout_width="120dp"
                android:layout_height="150dp" />

            <!--<ImageView-->
                <!--android:id="@+id/leftAnim"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="150dp" />-->

            <!--<ImageView-->
                <!--android:id="@+id/rightAnim"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="150dp" />-->

            <!--<ImageView-->
                <!--android:id="@+id/backAnim"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="150dp" />-->

            <ImageView
                android:id="@+id/loadingAnim"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@anim/loading_anim"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/googleLoadingAnim"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewAnim"
            android:background="@color/anim_title_bg"
            android:layout_below="@id/frameAnimLayout"
            android:text="View Animation"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/viewAnim"
            android:background="@color/anim_layout_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/scaleView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avator"/>

            <TextView
                android:id="@+id/tranText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文字"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>